# shellcheck shell=bash #xsh

push_git(){
    git remote remove "$1" 2>/dev/null
    git remote add "$1" git@"$1".com:x-cmd/advise.git
    git push "$1"
}

x dist tgz
git add dist/all.tgz
git commit -m "dist/all.tgz"
case "$1" in
    gitee)
        push_git gitee
    ;;
    github)
        push_git github
    ;;
    *)
        push_git gitee
        push_git github
    ;;
esac